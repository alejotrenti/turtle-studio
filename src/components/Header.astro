<nav id="navbar" class="fixed top-0 w-full bg-transparent lg:bg-opacity-70 px-6 sm:px-80 py-4 flex justify-between items-center backdrop-blur-sm z-50 transition-all duration-300">
    <!-- Logo -->
    <img class="h-auto rounded-full w-28 pointer-events-none" src="/logo-pilates.png" alt="Logo">

    <!-- Dropdown para pantallas pequeñas -->
    <div class="lg:hidden">
        <button
            id="mobile-menu-toggle"
            class="text-beige bg-mintGreen hover:bg-darkGreen border-0 px-4 py-2 rounded-md text-xl focus:outline-none focus:ring-2 focus:ring-darkGreen/60"
        >
            ☰
        </button>
        <ul
            id="mobile-menu"
            class="hidden flex-col gap-2 p-4 shadow bg-mintGreen border-2 border-darkGreen/60 rounded-lg w-52 text-beige absolute top-16 right-6"
        >
            <li><a href="#hero" class="block hover:bg-darkGreen px-4 py-2 rounded-md border-b border-b-white">INICIO</a></li>
            <li><a href="#services" class="block hover:bg-darkGreen px-4 py-2 rounded-md border-b border-b-white">SERVICIOS</a></li>
            <li><a href="#contact" class="block hover:bg-darkGreen px-4 py-2 rounded-md">CONTACTO</a></li>
        </ul>
    </div>
    <div class="hidden lg:flex gap-20">  
        <a href="#hero" class="text-beige text-3xl font-semibold font-staat">INICIO</a>
        <a href="#services" class="text-beige text-3xl font-semibold font-staat">SERVICIOS</a>
        <a href="#contact" class="text-beige text-3xl font-semibold font-staat">CONTACTO</a>    
    </div>
</nav>

<script>
    const menuToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');  
    const navbar = document.getElementById('navbar');

    menuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
    });

    // Función para mostrar fondo del navbar al hacer scroll
    window.addEventListener('scroll', () => {
        if (window.scrollY > 50) {
            navbar.classList.add('bg-mintGreen');
            navbar.classList.remove('bg-transparent');
        } else {
            navbar.classList.remove('bg-mintGreen');
            navbar.classList.add('bg-transparent');
        }
    });
</script>
